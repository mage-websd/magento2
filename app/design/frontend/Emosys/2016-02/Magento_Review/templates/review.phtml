<script>
    require([
        'jquery'
    ], function ($) {
        if ($('.review-toolbar a')) {
            $(document).on('click', '.review-toolbar a', function (event) {
                event.preventDefault();
                $('.loading-mask.review-list-loading').show();
                //customer-reviews
                $.ajax({
                    url: $(this).attr('href'),
                    type: 'get',
                    success: function (data) {
                        $('#product-review-container').html(data);
                        $('.loading-mask.review-list-loading').hide();
                    }
                });
            })
        }

    });
</script>